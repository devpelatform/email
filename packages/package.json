{
  "name": "@pelatform/email",
  "version": "1.0.0",
  "description": "Email templates and sending utilities for SaaS applications.",
  "author": "Pelatform Dev",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./components": {
      "import": {
        "types": "./dist/components.d.ts",
        "default": "./dist/components.js"
      },
      "require": {
        "types": "./dist/components.d.cts",
        "default": "./dist/components.cjs"
      }
    },
    "./helpers": {
      "import": {
        "types": "./dist/helpers.d.ts",
        "default": "./dist/helpers.js"
      },
      "require": {
        "types": "./dist/helpers.d.cts",
        "default": "./dist/helpers.cjs"
      }
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "clean:all": "rimraf .turbo dist node_modules",
    "dev": "tsup --watch",
    "build": "tsup --clean --dts",
    "types:check": "tsc --noEmit"
  },
  "homepage": "https://devpelatform.github.io/email",
  "files": [
    "dist/*",
    "README.md"
  ],
  "keywords": [
    "pelatform",
    "email",
    "smtp",
    "nodemailer",
    "resend"
  ],
  "dependencies": {
    "@react-email/components": "^0.5.7",
    "nodemailer": "^7.0.10",
    "resend": "^6.2.2"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@types/nodemailer": "^7.0.3",
    "@types/react": "^19.2.2",
    "react": "^19.2.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
